<% if @user.errors.any? %>
  <div class="bg-danger col-lg-12">
    <ul class="list-unstyled">
      <% @user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |user| %>
  <div class="container">
      <div class="row">
          <div class="col-lg-1 col-lg-offset-1">
              <%= user.label :email %>
          </div>
          <div class="col-lg-5">
              <%= user.text_field :email, class: "form-control" %>
          </div>
      </div>
      <div class="row">
          <div class="col-lg-1 col-lg-offset-1">
              <%= user.label :password %>
          </div>
          <div class="col-lg-5">
              <%= user.password_field :password, class: "form-control" %>
          </div>
      </div>
      <div class="row">
          <div class="col-lg-1 col-lg-offset-1">
              <%= user.label :name %>
          </div>
          <div class="col-lg-3">
              <%= user.text_field :name, class: "form-control" %>
          </div>
      </div>
      <div class="row">
          <div class="col-lg-1 col-lg-offset-1">
              <%= user.label :avatar %>
          </div>
          <div class="col-lg-5">
              <%= user.url_field :avatar, class: "form-control" %>
          </div>
      </div>
      <div class="row">
          <div class="col-lg-1 col-lg-offset-1">
              <%= user.label :banner %>
          </div>
          <div class="col-lg-5">
              <%= user.url_field :banner, class: "form-control" %>
          </div>
      </div>
      <div class="row">
          <div class="col-lg-3 col-lg-offset-2">
              <%= user.submit class: "btn btn-primary" %>
          </div>
      </div>
  </div>
<% end %>
